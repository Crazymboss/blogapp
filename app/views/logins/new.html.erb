<h1>Log In</h1>

<%= form_with model: @user, url: logins_path do |form| %>
    <div>
        <%= form.label :email %>
        <%= form.email_field :email, class:"form-control" %>
    </div>
    <div><br>
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control" %>
    </div>
    <div><br><br>
        <%= form.submit "Submit",class:"btn btn-primary" %>
    </div>

<% end %>
